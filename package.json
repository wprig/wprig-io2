{
  "name": "wprig",
  "version": "3.1.0",
  "description": "A progressive theme development rig for WordPress.",
  "author": "The WP Rig Contributors",
  "license": "GPL-3.0-or-later",
  "main": "index.php",
  "homepage": "https://github.com/wprig/wprig#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wprig/wprig.git"
  },
  "engines": {
    "node": ">=20.13.1",
    "npm": ">=10.5.2"
  },
  "bugs": {
    "url": "https://github.com/wprig/wprig/issues"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.38.0",
    "@parcel/css": "^1.14.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@wordpress/block-editor": "^15.6.0",
    "@wordpress/blocks": "^15.6.0",
    "@wordpress/components": "^28.13.0",
    "@wordpress/create-block": "^4.76.0",
    "@wordpress/data": "^10.33.0",
    "@wordpress/eslint-plugin": "^21.6.0",
    "@wordpress/scripts": "^30.26.0",
    "@wordpress/server-side-render": "^6.9.0",
    "ansi-colors": "^4.1.3",
    "archiver": "^6.0.2",
    "autoprefixer": "^9.8.8",
    "browser-sync": "^2.29.3",
    "browserslist": "^4.27.0",
    "chokidar": "^3.6.0",
    "chokidar-cli": "^3.0.0",
    "commander": "^12.1.0",
    "create-cert": "^1.0.6",
    "cross-env": "^5.2.1",
    "cssnano": "^4.1.11",
    "deepmerge": "^4.3.1",
    "del": "^8.0.1",
    "esbuild": "^0.25.11",
    "esbuild-loader": "^2.21.0",
    "eslint": "^8.57.1",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "esm": "^3.2.25",
    "fancy-log": "^1.3.3",
    "fast-glob": "^3.3.3",
    "fs-extra": "^11.3.2",
    "globals": "^15.15.0",
    "import-fresh": "^3.3.1",
    "inquirer": "^9.3.8",
    "jest": "^29.7.0",
    "jest-expect-message": "^1.1.3",
    "minimist": "^1.2.8",
    "mkdirp": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "postcss-custom-media": "^11.0.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "replace-in-file": "^6.3.5",
    "rimraf": "^6.0.1",
    "sharp": "^0.33.5",
    "stylelint": "^16.25.0",
    "svgo": "^3.3.2",
    "tiny-lr": "^2.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "vinyl": "^2.2.1"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "jest-expect-message"
    ]
  },
  "type": "module",
  "scripts": {
    "editor-support": "node node/editorSupport.js",
    "rig-init": "npm install --loglevel=error --no-audit --no-fund && composer install --quiet && node scripts/cli.js init",
    "rig-init:bun": "bun install --loglevel=error --no-audit --no-fund && composer install --quiet && node scripts/cli.js init",
    "generateCert": "node scripts/cli.js generateCert",
    "build:js": "node build-js.js",
    "dev:js": "node build-js.js --dev",
    "lint:js": "cross-env ESLINT_USE_FLAT_CONFIG=true eslint \"assets/js/src/**/*.{js,jsx,ts,tsx}\"",
    "build:css": "node build-css.js",
    "dev:css": "node build-css.js --dev",
    "lint:css": "node lint-css.js",
    "watch:js": "node build-js.js",
    "watch:css": "npm run build:css && chokidar 'src/styles/**/*.css' -c 'npm run build:css'",
    "dev": "node scripts/cli.js dev",
    "dev:modern": "node scripts/dev-modern.js",
    "dev:modern:debug": "cross-env WPRIG_DEBUG=1 node scripts/dev-modern.js --debug",
    "build": "node scripts/cli.js build",
    "build:blocks": "node scripts/build-all-blocks.js",
    "start:blocks": "node scripts/build-all-blocks.js --watch",
    "start": "node scripts/start.js",
    "build:phpcs": "node scripts/cli.js build --phpcs",
    "images": "node scripts/cli.js images",
    "bundle": "cross-env NODE_ENV=production node scripts/cli.js bundle",
    "bundle:phpcs": "cross-env NODE_ENV=production node scripts/cli.js bundle --phpcs",
    "bundle:check-all": "cross-env NODE_ENV=production node scripts/cli.js bundle --phpcs",
    "block:new": "node scripts/blocks.js block:new",
    "block:new:dynamic": "node scripts/blocks.js block:new --dynamic",
    "block:list": "node scripts/blocks.js block:list",
    "block:remove": "node scripts/blocks.js block:remove",
    "block:promote-plugin": "node scripts/blocks.js block:promote-plugin",
    "childify": "node node/childify.js",
    "setup-child": "npm run rig-init && npm run childify",
    "setup-child:bun": "bun run rig-init:bun && bun run childify",
    "block-based": "node scripts/convert-to-block-theme.js",
    "create-rig-component": "node node/create-component-wrapper.js"
  },
  "dependencies": {
    "glob": "^11.0.3"
  }
}
